<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog title="Add New Table" class="sapUiSmallMargin">
        <VBox class="sapUiContentPadding sapUiSmallMargin">
            <Label  text="Table Name:" design="Bold"/>
            <Input  id="inp1" value="{addTableModel>/Table}"  />
        </VBox>
 
        <VBox class="sapUiContentPadding sapUiSmallMargin">
            <Label  text="Sub Process ID:" design="Bold"/>
            <Input  id="inp2" value="{addTableModel>/subProcessId}"  placeholder="Must be a Number without Decimal"/>
        </VBox>
        <footer>
            <OverflowToolbar >  
                <ToolbarSpacer/>        
                <Button type="Accept" text="Save" press="onSaveNewTable">
                </Button>
                <Button type="Reject" text="Cancel" press="oncancelNewTable">
                </Button>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>