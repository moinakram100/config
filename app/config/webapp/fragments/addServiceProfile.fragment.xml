<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog id="CreateProfileDialog" title="Create Profile" class="sapUiSmallMargin">
        <VBox id="CreateProfileDialogVBox" class="sapUiContentPadding sapUiSmallMargin">
            <Label id="ProfileNameLabel"  text="Profile Name :" design="Bold"/>
            <Input id="ProfileNameInput"  value="{addServiceProfileModel>/profileName}" liveChange="onProfileNameChange"  placeholder="Enter field name" />
            <Label id="ProfileDescriptionLabel" text="Profile Description :" design="Bold"/>
            <Input id="ProfileDescriptionInput" value="{addServiceProfileModel>/profileDesc}" liveChange="inputHandler" placeholder="Enter field name description" />
            
        </VBox>
        <footer>
        	<OverflowToolbar id="addServiceProfileOT" >	
                <ToolbarSpacer id="addServiceProfileToolbar"/>		
				<Button id="onSaveNewProfileBtn" type="Accept" text="Save" press="onSaveNewProfile"></Button>
                <Button id="oncancelNewProfileBtn" type="Reject" text="Cancel" press="oncancelNewProfile"></Button>
			</OverflowToolbar>
            <!-- <Button id="_IDGenButton3" text="Create" press="onCreateField" />
            <Button id="_IDGenButton4" text="Cancel" press="onCancelCreateField" /> -->
        </footer>
    </Dialog>
</core:FragmentDefinition>   