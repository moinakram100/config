<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        id="createDialog"
        title="Create Field"
        class="sapUiSmallMargin"
    >
        <VBox
            id="configServiceParameter_VBox1"
            class="sapUiContentPadding sapUiSmallMargin"
        >
            <Label
                id="configServiceParameter_Label4"
                text="Field Name :"
            />
            <Input
                id="newFieldNameInput"
                value="{addParameterModel>/fieldName}"
                liveChange="inputHandler"
                placeholder="Enter field name"
            />
            <Label
                id="configServiceParameter_Label5"
                text="Field Description :"
            />
            <Input
                id="newFieldNameInputdesc"
                value="{addParameterModel>/fieldDesc}"
                liveChange="inputHandler"
                placeholder="Enter field name description"
            />
            <Label
                id="configServiceParameter_Label6"
                text="Field Type :"
            />
            <Select
                id="fieldTypeComboBox3"
                width="100%"
                selectedKey="{addParameterModel>/selectedFieldType}"
                items="{addParameterModel>/fieldTypeList}"
                change="onComboBoxChange"
            >
                <items>
                    <core:Item
                        id="configServiceParameter_coreItem"
                        key="{addParameterModel>key}"
                        text="{addParameterModel>text}"
                    />
                </items>
            </Select>
            <Input
                id="configServiceParameter_Input2"
                placeholder="Enter String Length (max=30)"
                maxLength="2"
                required="true"
                liveChange="onStringLengthChange"
                value="{addParameterModel>/fieldLength}"
                type="Number"
                visible="{=${addParameterModel>/selectedFieldType} === 'String' ? true : false}"
            />
            <VBox
                id="configServiceParameter_VBox2"
                visible="{=${addParameterModel>/selectedFieldType} === 'List' ? true : false}"
                class="createParameterFrag"
            >
                <VBox id="configServiceParameter_VBox3" items="{path: 'addParameterModel>/listValues'}">
                    <items>
                        <Input
                           id="configServiceParameter_Input3"
                            placeholder="Enter Value"
                            value="{addParameterModel>value}"
                            width="200px"
                        />
                    </items>
                </VBox>
                <Button
                     id="onAddListItem_Btn"
                    icon="sap-icon://add"
                    press="onAddListItem"
                />
            </VBox>
        </VBox>
        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer id="configServiceParameter_ToolbarSpacer3" />
                <Button
                    id="onsaveNewParameter_Btn"
                    type="Accept"
                    text="Save"
                    press="onsaveNewParameter"
                />
                <Button
                    id="oncancelNewParameter_Btn"
                    
                    type="Reject"
                    text="Cancel"
                    press="oncancelNewParameter"
                />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
