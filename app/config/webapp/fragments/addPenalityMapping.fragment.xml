<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog id="PenalityMapAddMapDialog" title="Create Mapping with Penalty" class="sapUiSmallMargin">
        <VBox id="PenalityMapfragVbox" class="sapUiContentPadding sapUiSmallMargin">
            <Label id="PenalityMapServiceProfLabel" text="Service Profile :" design="Bold" />
            <Input id="PenalityMapServiceProfvalLabel"  value="{addPenaltyModel>/profileName}" showValueHelp="true" valueHelpRequest="onServiceProfile" valueHelpOnly="true"/>
            <Label id="PenalityMapServiceParam"   text="Service Parameter :" design="Bold" />
            <Input id="PenalityMapServiceParamvalLabel"  value="{addPenaltyModel>/paneltyParmeter}" showValueHelp="true" valueHelpRequest="onServiceParam" valueHelpOnly="true"/>
            <Label id="PenalityMapPenalityIdLabel" text="Penalty ID :" design="Bold" />
            <Input id="PenalityMapPenalityIdValLabel" value="{addPenaltyModel>/ezReportId}" showValueHelp="true" valueHelpRequest="onEzId" valueHelpOnly="true"/>
        </VBox>
        <footer>
            <OverflowToolbar id="PenalityMapFragOverflowtoolbar" >  
                <ToolbarSpacer id="PenalityMapFragToolbarSpacer"/>        
                <Button id="PenalityMappingSaveButton" type="Accept" text="Save" press="onsavePenaltyMapping">
                </Button>
                <Button id="PenalityMappingCancelButton" type="Reject" text="Cancel" press="oncancelPenaltyMapping">
                </Button>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>  