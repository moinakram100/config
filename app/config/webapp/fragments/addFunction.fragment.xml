<core:FragmentDefinition xmlns="sap.m" xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core">
    <TableSelectDialog
        id="PenalityOperFragmentTableID"
        class="sapUiContentPadding"
        contentWidth="50%"
        contentHeight="60%"
        title="Additional Function"
        liveChange="CurSearch"
        items="{/AddiFunction}"
        cancel="handleValueHelpClose"
        confirm="handleValueHelpClose"
        search="CurSearch"
        noDataText="No Data Found"
        >
       
                <columns>
                    <Column id="PenalityOperFragFuncCol" >
                        <Text id="PenalityOperFragmentFuncText" text="Function"></Text>
                    </Column>
 
                    <Column id="PenalityOperFragFunctDescCol" >
                        <Text id="PenalityOperFragFunctDescText" text="Function Description"></Text>
                    </Column>
                   
                </columns>
 
                <items>
                    <ColumnListItem id="PenalityOperFragmentColoumnListItem" >
                        <Text id="PenalityOperFragFunc" text="{Function}"></Text>
                        <Text id="PenalityOperFragFunDesc" text="{FunctionDesc}"></Text>
                    </ColumnListItem>
                </items>
           
        </TableSelectDialog>
</core:FragmentDefinition>