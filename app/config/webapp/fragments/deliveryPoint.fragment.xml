<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <SelectDialog
        id="PathFueldeliveryPointDialog"
        noDataText="Loading .."
        title="Select Delivery Location"
        search="onsearchDeliveryLocation"
        liveChange="onsearchDeliveryLocation"
        confirm="ondeliverypointSelection"
        cancel="ondeliverypointSelection"
       items="{
            path : '/xGMSxLocPoint_Map',
            parameters : {
                $$operationMode : 'Server',
                $filter : 'isDeliveryPoint	 eq \'YES\''
              
            }
        }"
         initialFocus="SearchField"
        >
        <StandardListItem id="PathFueldeliveryPointList"
            title="{Locid}"
            description="{Tsyst}"  
            iconDensityAware="false"
            iconInset="false"
            type="Active" />
    </SelectDialog>
</core:FragmentDefinition>




