<mvc:View
    controllerName="com.ingenx.config.controller.ezReportMapping"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:t="sap.ui.table"
    height="100%"
>
    <OverflowToolbar id="PenalityMappingOverflowToolbar" height="50px">
        <Title
            id="PenalityMappingTitle"
            text="Penalty-Calculation Mapping"
            textAlign="Center">
        </Title>
        <ToolbarSpacer id="PenalityMappingToolbarSpacer" />
        <Button id="createPenaltyID" text="Create" width="100px" press="onAddNewPenalityMap" type="Emphasized"  />
        <Button id="deletePenaltyID" text="Delete" width="100px" press="onDeletePenaltyMap" type="Emphasized"  />
        <Button id="deletePenaltyMapConfirmBtn" text="Confirm" width="100px" press="onConfirmPenaltyMapDeletion" type="Emphasized" visible="false"/>
        <Button id="cancelPenaltyMapDeleteBtn" text="Cancel" width="100px" press="onCancelPenaltyMapDeletion" type="Emphasized" visible="false"/>
    </OverflowToolbar>
    <Page id="PenalityMappingPage" showHeader="false">
   
        <content>
             <Table items="{path: '/penalties'}" id="penaltyTable" selectionChange="onSelect" mode="None"  >
                <columns>
                    <Column id="PenalityMapDeleteMapLabel" width="1rem" visible="false">
                        <header>
                            <CheckBox id="selectAllPenaltyMap" select="onSelectPenaltyMap"/>
                        </header>
                    </Column>
                    
                    <Column id="PenalityMapServiceProfileCol" width="2rem">
                        <header>
                            <Label id="PenalityMapServiceProfileText" wrapping="true" design="Bold" text="Service Profile" />
                        </header>
                    </Column>
                    <Column id="PenalityMapServiceParamCol" width="7rem">
                        <header>
                            <Label id="PenalityMapServiceParamLabel" wrapping="true" design="Bold" text="Service Parameter" />
                        </header>
                    </Column>
 
                    <Column id="PenalityMapPenalityIDCol" width="5rem">
                        <header>
                            <Label id="PenalityMapPenalityIDLabel" wrapping="true" design="Bold" text="Penalty ID Associated" />
                        </header>
                    </Column>
 
                </columns>
                <items>
                    <ColumnListItem type="Active" id="PenalityMapColoumnlistItem">
                        <cells>
                            <CheckBox id="PenalityMapdeleteAllocCheckBox" select="onDeletePenaltyMapArray"/>
                          
                            <Text id="PenalityMapProfileName" text="{profileName}" />
                            <Text id="PenalityMapParameter" text="{paneltyParmeter}" />
                            <Text id="PenalityMapEzId" text="{ezReportId}" />
                        </cells>
                    </ColumnListItem>
                </items>
                 <noData>
                    <IllustratedMessage id="PenalityMapIllustratedMessage" enableVerticalResponsiveness="true" title="No Data Found" description="There are no items in this Table"/>
                </noData>
            </Table>
        </content>
    </Page>
</mvc:View>
 