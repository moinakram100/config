<mvc:View controllerName="com.ingenx.config.controller.pathFuel"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
  xmlns="sap.m" xmlns:core="sap.ui.core">
 <Page id="PathFuelpage" showHeader="false">
  <OverflowToolbar id="PathfuelToolbar" height="50px" >
      <Title
          id="PathFuelHeader"
          text="Path &amp; Fuel"
          textAlign="Center"
          >
      </Title>
      <ToolbarSpacer id="PathFuelToolbarSpacer"  />
      <Button id="PathFueladdPathBtn" text="Create" width="100px" press="onAddPath" type="Emphasized" visible="true"/>
      <Button id="PathFuelcancelAddBtn" text="Cancel" width="100px" press="onCancelAddPath" type="Emphasized" visible="false"/>
      <Button id="PathFueldeletePathBtn" text="Delete" width="100px" press="onDeletePath" type="Emphasized" visible="true"/>
      <Button id="PathFueldelPathConfirm" text="Confirm" width="100px" press="onConfirmDeletePath" type="Emphasized" visible="false"/>
      <Button id="PathFuelcancelPathDelete" text="Cancel" width="100px" press="onCancelDelPath" type="Emphasized" visible="false"/>
  </OverflowToolbar>
 
  <content>
  <Table id="PathFuelviewPathtable" items="{/pathAndFuelMapping}" mode="None" >  
 
      <columns>
        <Column id="PathFueldeletePathLabel" width="6rem" visible="false">
            <header>
                <CheckBox id="PathFuelselectAllPath" select="onSelectAllPath"/>
            </header>
        </Column>
        
        <Column id="PathFuelDeliveryPointCol">
          <Text id="PathFuelDeliveryPointText" text="Delivery Point" />
        </Column>
        <Column id="PathFuelDeliveryPointTranCol">
          <Text id="PathFuelDeliveryPointTraText" text="Delivery Point Transport System" />
        </Column>
        <Column id="PathFuelReDeliveryPointCol">
          <Text id="PathFuelReDeliveryPointText" text="Redelivery Point" />
        </Column>
        <Column id="PathFuelReDeliveryPointTranCol">
          <Text id="PathFuelReDeliveryPointTranText" text="Redelivery Point Transport System" />
        </Column>
        <Column id="PathFuelSplitCol">
          <Text id="PathFuelSplitText" text="Split Path Required" />
        </Column>
        <Column id="PathFuelInterCol">
          <Text id="PathFuelInterText" text="Interconnect" />
        </Column>
        <Column id="PathFuelPathCol" width="16rem">
          <Text id="PathFuelPathText" text="Path"/>
        </Column>
        <Column id="PathFuelFuelPerCol">
          <Text id="PathFuelFuelPerTExt" text="Fuel %" />
        </Column>
      </columns>
   
      <items>
        <ColumnListItem id="PathFuelColumnListItem">
 
        
          <cells>
            <CheckBox id="PathdeletePathCB" select="onDeletePathArray"/>
          
            <Text id="PathFuelpathDelivery" text="{DeliveryPoint}" />
            <Text id="PathFuelpathDelPoint" text="{DpTsSystem}" />
            <Text id="PathFuelpathReDelPoint" text="{ReDeliveryPoint}" />
            <Text id="PathFuelpathRelPoint" text="{RDpTsSystem}" />
            <Text id="PathfuelpathIC" text="{InterconnectPath}" />
            <Text id="PathFuelpathInterConnect" text="{Interconnect}" />
            <Text id="PathFuelpath" text="{path}" />
            <Text id="PathFuelpathFuelper" text="{FuelPercentage}" />
          </cells>
        </ColumnListItem>
      </items>
       <noData>
          <IllustratedMessage id="PathFuelIllustratedMessage7" enableVerticalResponsiveness="true" title="No Data Found" description="There are no items in this Table"/>
      </noData>
  </Table>
 
    <Label id="PathFuelpathHeading" text="Add Path" design="Bold" class="sapUiSmallMargin pathFuelAddHeading" visible="false"/>
   
    <Table id="PathFueladdPathTable" items="{pathmodel>/}" mode="None" visible="false">      
          <columns>
            <Column id="test" visible="false"/>
            <Column id="PathFuelDeliveryColumn"/>
            <Column id="PathFuelDeliveryTransportColumn"/>
            <Column id="PathFuelRedeliveryColumn"/>
            <Column id="PathFuelRedeliveryTransportColumn"/>
            <Column id="PathFuelsplitpathColumn"/>
            <Column id="PathFuelIs_InterconnectColumn"/>
            <Column id="PathFuelInterconnectPathColumn" />
            <Column id="PathFuelFuelPercentageColumn" />
        
          </columns>
       
          <items>
            <ColumnListItem id="PathFueladdPathColumnListItem">
              <cells>
              <Text id="PathFuelTestText"/>
              <Input id="PathFuelDeliveryPoint" width="100px" showValueHelp="true" required="true" valueHelpRequest="onDeliveryPoint" value="{pathmodel>delPoint}" valueHelpOnly="true"   />
              <Input id="PathFuelDelivery_Point_TransportSystem" editable="false" width="100px" value="{pathmodel>delPointTsyst}"/>
              <Input id="PathFuelreDelivery_Point" width="100px" showValueHelp="true"  required="true" valueHelpRequest="onReDeliveryPoint" value="{pathmodel>reDelPoint}"  valueHelpOnly="true" />
              <Input id="PathFuelReDelivery_Point_TransportSystem" editable="false" width="100px" value="{pathmodel>reDelPointTsyst}"/>
              <Input id="PathFuelsplitPathRequired" width="100px" liveChange="onInput6LiveChange" value="{pathmodel>isInterconnect}" editable="false" />
              <Input id="PathFuelisInterconnect" width="100px" liveChange="onInput5LiveChange" value="{pathmodel>sInterconnect}" editable="{pathmodel>bInterconnect}"></Input>
              <Input id="PathFuelinterconnectPath" width="180px" editable="false" liveChange="onInput7LiveChange" value="{pathmodel>path}"></Input>
              <Input id="PathFuelFuelPercentage" liveChange="onFuelPerChange" width="60px" value="{pathmodel>fuelpct}"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
   
      <HBox id="PathFuelsubmitPathBtn" class="id_hbox pathFuelAddHeading" visible="false">
          <Button xmlns="sap.m"
              text="Submit"
              id="SubmitButton"
              class="sapUiSmallMargin"
              press="onSubmit"
              type="Emphasized" />
      </HBox>
    </content>
  </Page>
</mvc:View>
 