<mvc:View controllerName="com.ingenx.config.controller.createEzID"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="PenaltyIdDefinationPage" showHeader="false">
        <content>
            <Table id="PenaltyIdDefezidtable" items="{path: '/EzIdTable'}" selectionChange="onSelect" mode="None" sticky="ColumnHeaders,HeaderToolbar">
                <headerToolbar>
                    <OverflowToolbar id="PenaltyIdDefOverflowToolbar" height="40px">
                        <Title
                            id="PenaltyIdDefTitle"
                            text="Penalty IDs"
                            textAlign="Center">
                        </Title>
                        <ToolbarSpacer id="PenaltyIdDefToolbarSpacer" />
                        <Button id="PenaltyIdDefnewId" width="100px" text="Create" press="onCreatePenaltyId" type="Emphasized" visible="true"/>
                        <Button id="PenaltyIdDefDeleteIdBtn" text="Delete" width="100px" press="onDeletePenaltyId" type="Emphasized" visible="true"/>
                        <Button id="PenaltyIdDefDeleteIdConfirmBtn" text="Confirm" width="100px" press="onPenaltyIdConfirmIdDeletion" type="Emphasized" visible="false"/>
                        <Button id="PenaltyIdDefCancelIdDeleteBtn" text="Cancel" width="100px" press="ononPenaltyIdCancelIdDeletion" type="Emphasized" visible="false"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>  
                    <Column   id="PenaltyIdDefdeleteIdLabel" width="6rem" visible="false">
                        <header>
                            <CheckBox id="PenaltyIdDefCheckboxCol" select="onPenaltySelectAllId"/>
                        </header>
                    </Column>
                    <Column id ="PenaltyIdDefSnoCol" >
                        <header>
                            <Label id ="PenaltyIdDefSnolabel" wrapping="true" design="Bold" text="S.No" />
                        </header>
                    </Column>
                    <Column id ="PenaltyIdDefIdCol" >
                        <header>
                            <Label id ="PenaltyIdDefIdLabel"  wrapping="true" design="Bold" text="Penalty ID" />
                        </header>
                    </Column>
                     <Column  id="PenaltyIdDefDescCol">
                        <header>
                            <Label id="PenaltyIdDefDescLabel" wrapping="true" design="Bold" text="Description" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem  press="onSelectPenaltyEzId" id="PenaltyIdDefColoumnlistitem" type="Navigation">
                        <cells>
                            <CheckBox id="PenaltyIdDefDeleteEzIdCheckBox" select="onDeleteArrayEzId"/>
                            <Text id="PenaltyIdDefSno" text="{Snum}" />
                            <Text id="PenaltyIdDefEzId" text="{EzID}" />
                            <Text id="PenaltyIdDefDescription" text="{EzIdDescription}" />  
                        </cells>
                    </ColumnListItem>
                </items>
                <noData>
                    <IllustratedMessage id="PenaltyIdDefIllustratedMessage" enableVerticalResponsiveness="true" title="No Data Found" description="There are no items in this Table"/>
                </noData>
            </Table>
        </content>
    </Page>
</mvc:View>