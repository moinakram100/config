<mvc:View
    controllerName="com.ingenx.config.controller.createParameter"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        showHeader="false"
    >
        <content>
            <Table
                items="{/serviceParametersItems}"
                id="parameterTable"
                selectionChange="onSelect"
                mode="None"
            >
                <headerToolbar>
                    <OverflowToolbar
                        id="_IDGenOverflowToolbar9"
                        height="50px"
                    >
                        <Title
                            id="pageHeader"
                            text="Service Parameter Definition"
                            textAlign="Center"
                        />
                        <ToolbarSpacer />
                        <Button
                            id="createParameterBtn"
                            text="Create"
                            width="100px"
                            press="onCreate"
                            type="Emphasized"
                            visible="true"
                        />
                        <Button
                            id="deleteParameterBtn"
                            text="Delete"
                            width="100px"
                            press="onDelete"
                            type="Emphasized"
                            visible="true"
                        />
                        <Button
                            id="deleteConfirmBtn"
                            text="Confirm"
                            width="100px"
                            press="onConfirmDeletion"
                            type="Emphasized"
                            visible="false"
                        />
                        <Button
                            id="cancelDeleteBtn"
                            text="Cancel"
                            width="100px"
                            press="onCancelDeletion"
                            type="Emphasized"
                            visible="false"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="deleteLabel"
                        width="3rem"
                        visible="false"
                    >
                        <header>
                            <CheckBox
                                id="selectAll"
                                select="onSelectAll"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_IDGenColu"
                        width="4rem"
                    >
                        <header>
                            <Label
                                id="_IDGenLl12"
                                wrapping="true"
                                text="ID"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_colLevel"
                        width="3rem"
                    >
                        <header>
                            <Label
                                id="_IDLevel"
                                wrapping="true"
                                text="Allocation Level"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_IDGenColumn2"
                        width="6rem"
                    >
                        <header>
                            <Label
                                id="_IDGenLabel7"
                                wrapping="true"
                                text="Service Parameter"
                            />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Active"
                        id="item0"
                    >
                        <cells>
                            <CheckBox
                                id="deleteCheckBox"
                                select="onDeleteArray"
                            />
                            <Text
                                id="id2"
                                text="{ID}"
                            />
                            <Input
                                id="_IDGenInput2"
                                value="{Level}"
                                width="40px"
                                type="Number"
                            />
                            <Text
                                id="id1"
                                text="{serviceParameter}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
                <noData>
                    <IllustratedMessage
                        id="_IDGenIllustratedMessage4"
                        enableVerticalResponsiveness="true"
                        title="No Data Found"
                        description="There are no items in this Table"
                    />
                </noData>
            </Table>
        </content>
    </Page>
</mvc:View>
