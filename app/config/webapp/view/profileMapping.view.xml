<mvc:View controllerName="com.ingenx.config.controller.profileMapping"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="configProfileMap_page" showHeader="false">
       
        <content>
            <Table items="{path: '/DocumentNoProfileMapping',parameters: {$count: true}}" noDataText="No Mapping exists" id="tablemapping" selectionChange="onSelect" mode="None" sticky="ColumnHeaders,HeaderToolbar">
            <headerToolbar>
                <OverflowToolbar id="configProfileMap_OverflowToolbar" height="50px">
                    <Title
                        id="configProfileMap_pageHeader"
                        text="Service Profile Mapping"
                        textAlign="Center">
                    </Title>
                    <ToolbarSpacer id="configProfileMap_ToolbarSpacer"/>
                    <Button id="addMappingBtn" text="Create" width="100px" press="onAddMap" type="Emphasized" visible="true"/>
                    <Button id="deleteMappingBtn" text="Delete" width="100px" press="onDeletePressMap" type="Emphasized" visible="true"/>
                    <Button id="deleteMapConfirmBtn" text="Confirm" width="100px" press="onConfirmMapDeletion" type="Emphasized" visible="false"/>
                    <Button id="cancelMapDeleteBtn" text="Cancel" width="100px" press="onCancelMapDeletion" type="Emphasized" visible="false"/>
                </OverflowToolbar>
            </headerToolbar>
                <columns>
                    <Column id="configProfileMap_col_checkbox" width="6rem" visible="false">
                        <header>
                            <CheckBox id="selectAllMap" select="onSelectAllMap"/>
                        </header>
                    </Column>
                    
                    <Column id="configProfileMap_Col_DocType">
                        <header>
                            <Label id="configProfileMap_Label_Doctype" wrapping="true" design="Bold" text="Document Type" />
                        </header>
                    </Column>
                 
 
                    <Column id="configProfileMap_Col_ServiceProfile" >
                        <header>
                            <Label id="configProfileMap_Label_ServiceProf" wrapping="true" design="Bold" text="Service Profile" />
                        </header>
                    </Column>
 
                    <Column id="_configProfileMap_Col_SrvProfDesc" >
                        <header>
                            <Label id="configProfileMap_Label_SrvProfDesc" wrapping="true" design="Bold" text="Service Profile Description" />
                        </header>
                    </Column>
 
                </columns>
                <items>
                    <ColumnListItem type="Active" press="onSelectServiceProfile" id="configProfileMap_item">
                        <cells>
                            <CheckBox id="deleteCheckBox" select="onCheckBoxPressRow"/>
                           
                            <Text id="configProfileMap_Text_DocNo" text="{DocumentNo}" />
                            <Text id="configProfileMap_Text_SrvProfName" text="{serviceProfileName}" />
                            <Text id="configProfileMap_Text_SrvProfDesc" text="{serviceProfileDesc}" />
                           
                        </cells>
                    </ColumnListItem>
                </items>
                <noData>
                    <IllustratedMessage id="configProfileMap_IllustratedMessage" enableVerticalResponsiveness="true" title="No Data Found" description="There are no items in this Table"/>
                </noData>
 
            </Table>
        </content>
      
    </Page>
</mvc:View>