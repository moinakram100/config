<mvc:View
    controllerName="com.ingenx.config.controller.createProfile"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="createProfilePage"
        showHeader="false"
    >
        <content>
            <Table
                items="{path: '/ServiceProfileMaster',parameters: {$count: true,$$updateGroupId : 'peopleGroup'}}"
                id="createProTable"
                selectionChange="onSelect"
                mode="None"
                sticky="ColumnHeaders,HeaderToolbar"
            >
                <headerToolbar>
                    <OverflowToolbar
                        id="createProfile_overflowToolbar"
                        height="50px"
                    >
                        <Title
                            id="CreateProfile_PageHeader"
                            text="Service Profile Definition"
                            textAlign="Center"
                        />
                        <ToolbarSpacer />
                        <Button
                            id="newServiceProfile"
                            width="100px"
                            text="Create"
                            press="onCreatePro"
                            type="Emphasized"
                            visible="true"
                        />
                        <Button
                            id="copyOfServiceProfile"
                            width="100px"
                            text="Copy From"
                            press="onCopyForm"
                            type="Emphasized"
                            visible="true"
                        />
                        <Button
                            id="deleteProfileBtn"
                            text="Delete"
                            width="100px"
                            press="onDeleteProfile"
                            type="Emphasized"
                            visible="true"
                        />
                        <Button
                            id="deleteProConfirmBtn"
                            text="Confirm"
                            width="100px"
                            press="onConfirmProDeletion"
                            type="Emphasized"
                            visible="false"
                        />
                        <Button
                            id="cancelProDeleteBtn"
                            text="Cancel"
                            width="100px"
                            press="onCancelProDeletion"
                            type="Emphasized"
                            visible="false"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="deleteProfileLabel"
                        width="6rem"
                        visible="false"
                    >
                        <header>
                            <CheckBox
                                id="selectAllProfile"
                                select="onSelectAllProfile"
                            />
                        </header>
                    </Column>
                    <Column id="CreateProfile_IdLabelColumn">
                        <header>
                            <Label
                                id="CreateProfile_IdLabel"
                                wrapping="true"
                                design="Bold"
                                text="ID"
                            />
                        </header>
                    </Column>
                    <Column id="CreateProfile_ServiceProfileLabelColumn">
                        <header>
                            <Label
                                id="CreateProfile_ServiceProfileLabel"
                                wrapping="true"
                                design="Bold"
                                text="Service Profile"
                            />
                        </header>
                    </Column>

                    <Column id="CreateProfile_ProfileDescLabelColumn">
                        <header>
                            <Label
                                id="CreateProfile_ProfileDescLabel"
                                wrapping="true"
                                design="Bold"
                                text="Service Profile Description"
                            />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onSelectServiceProfile"
                        id="CreateProfileTableItem"
                    >
                        <cells>
                            <CheckBox
                                id="deleteProfileCheckBox"
                                select="onDeleteArrayProfile"
                            />
                            <Text
                                id="CreateProfile_id"
                                text="{ID}"
                            />
                            <Text
                                id="CreateProfile_serviceProfileName"
                                text="{serviceProfileName}"
                            />
                            <Text
                                id="CreateProfile_serviceProfileDesc"
                                text="{serviceProfileDesc}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
                <noData>
                    <IllustratedMessage
                        id="CreateProfile_IllustratedMessage"
                        enableVerticalResponsiveness="true"
                        title="No Data Found"
                        description="There are no items in this Table"
                    />
                </noData>
            </Table>
        </content>
        <!-- <footer>
            <OverflowToolbar id="otbFooter">    
                <ToolbarSpacer/>        
                <Button type="Accept" text="Submit" press="onsaveNewProfile">
                </Button>
            </OverflowToolbar>
        </footer> -->
    </Page>
</mvc:View>
