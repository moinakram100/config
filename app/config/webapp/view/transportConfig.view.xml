<mvc:View
    controllerName="com.ingenx.config.controller.transportConfig"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <OverflowToolbar
        id="transportConfigOt"
        height="50px"
    >
        <FlexBox id="transportConfig_mainFlexBox" direction="Column" class="sapUiSmallMargin">
            <FlexBox id="transportConfig_innerFlexBox"  alignItems="Center">
            <HBox id="transportConfig_VBox1" class="sapUiSmallMarginTop">
                <Label
                    id="transConfig_transType"
                    text="Transmission Type "
                    design="Bold"
                    class="sapUiTinyMarginTop sapUiSmallMarginEnd"
                />
                <HBox id="transportConfig_VBox2" class="sapUiSmallMarginBottom sapUiSmallMarginEnd">
                    <Select id="transportConfig_selectTransType" forceSelection="false" class="sapUiSmallMarginEnd" change="onTransmissionTypeChange">
                        <core:Item id="transTypeItem1" text="1 : 1" />
                        <core:Item id="transTypeItem2" text="1 : N" />
                        <core:Item id="transTypeItem3" text="N : 1" />
                    </Select>
                </HBox>
            </HBox>
            </FlexBox>
        </FlexBox>
        <ToolbarSpacer id="transportConfig_ToolbarSpacer" />
        <Button
            id="createTransID"
            text="Create"
            width="100px"
            press="onAddNewTransType"
            type="Emphasized"
            visible="true"
        />
        <Button
            id="deleteTransID"
            text="Delete"
            width="100px"
            press="onDelete"
            type="Emphasized"
            visible="true"
        />
        <Button
            id="deleteTransportConfirmBtn"
            text="Confirm"
            width="100px"
            press="onConfirmDelete"
            type="Emphasized"
            visible="false"
        />
        <Button
            id="cancelTransportDeleteBtn"
            text="Cancel"
            width="100px"
            press="onCancelTransportDeletion"
            type="Emphasized"
            visible="false"
        />
    </OverflowToolbar>
    <Page
        id="transportConfigPage"
        showHeader="false"
    >
        <content>
            <Table
                items="{transportconfig>/TransportConfig}"
                id="transportTable"
            >
               
                <columns>
                    <Column
                        id="deletetransLabel"
                        width="6rem"
                        visible="false"
                    >
                        <header>
                            <CheckBox
                                id="selectAllTransport"
                                select="onSelectAll"
                               
                            />
                        </header>
                    </Column>
                    <Column id="transportConfig_IDCol">
                        <header>
                            <Label
                                id="transportConfig_IDLabel"
                                text="ID"
                            />
                        </header>
                    </Column>
                    <Column id="transportConfig_sDocTypeCol">
                        <header>
                            <Label
                                id="transportConfig_sDocTypeLabel"
                                text="Sales Document Type"
                            />
                        </header>
                    </Column>
                    <Column id="transportConfig_pDocTypeCol">
                        <header>
                            <Label
                                id="transportConfig_pDocTypeLabel"
                                text="Purchase Document Type"
                            />
                        </header>
                    </Column>
                    <Column id="transportConfig_exchangeDocTypeCol">
                        <header>
                            <Label
                                id="transportConfig_exchangeDocTypeLabel"
                                text="Exchange Document Type"
                            />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Active"
                        id="transportConfig_colListItem"
                    >
                        <cells>
                            <CheckBox
                                id="transportConfig_deleteAllocCheckBox"
                                select="onSelectTransport"
                            />
                            <Text
                                id="transportConfig_itemId"
                                text="{transportconfig>ID}"
                            />
                            <Text
                                id="transportConfig_itemDocType"
                                text="{transportconfig>documentType}"
                            />
                            <Text
                                id="transportConfig_itemSide"
                                text="{transportconfig>side}"
                            />
                            <Text
                                id="transportConfig_itemExType"
                                text="{transportconfig>exchangeType}"/>
                        </cells>
                    </ColumnListItem>
                </items>
               
            </Table>
        </content>
    </Page>
</mvc:View>
 