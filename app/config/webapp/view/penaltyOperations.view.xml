<mvc:View
    height="100%"
    controllerName="com.ingenx.config.controller.penaltyOperations"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:custom="com.ingenx.config.controls">
 
     <Page id="PenalityOperPage" showHeader="false" floatingFooter="true">
        <content>
        <OverflowToolbar id="PenalityOperOverflowToolbar" height="40px" >
                    <Title id="PenalityOperTitle"  text="Penalty ID Operations" textAlign="Center"/>
                        <ToolbarSpacer id="PenalityOperToolbarSpacer"/>
                        <ComboBox change="onChange" selectionChange="onChange" id="PenalityOperComboBox" items="{/EzIdTable}">
                            <core:Item id="PenalityOperCoreItemEZId" text="{EzID}" key="{EzID}" />
                        </ComboBox>
                    </OverflowToolbar>
        <ScrollContainer id="PenalityOperScrollCont" width="100%" horizontal="true" vertical="false" >
            <Table id="PenalityOperFieldsTable" items="{path: 'selectedFModel>/', sorter:{path:'SubProcessId'}}" growing="true" sticky="ColumnHeaders,HeaderToolbar" busy="{viewModel>/busyIndicator}" fixedLayout="false" width="140rem">
               
                <columns>
                    <Column
                        id="PenalityOperSnoCol"
                         mergeDuplicates="true"
                       
                    >
                        <header>
                            <Text
                                id="PenalityOperSnoText"
                                text="S.No"
                            />
                        </header>
                    </Column>
                    <Column
                        id="PenalityOperIdCol"
                        mergeDuplicates="true"
                    >
                        <header>
                            <Text
                                id="PenalityOperIdColText"
                                text="Penalty ID"
                            />
                        </header>
                    </Column>
                    <Column
                        id="PenalityOperTableCol"
                        mergeDuplicates="true"
                       
                    >
                        <header>
                            <Text
                                id="PenalityOperTableText"
                                text="Table"
                            />
                        </header>
                    </Column>
 
                     <Column
                        id="PenalityOperSubProcessCol"
                        mergeDuplicates="true"
                       
                    >
                        <header>
                            <Text
                                id="PenalityOperSubProcessText"
                                text="Sub Proces ID"
                            />
                        </header>
                    </Column>
                    <Column
                        id="PenalityOperFieldCol"
                    >
                        <header>
                            <Text
                                id="PenalityOperFieldText"
                                text="Field"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOperFieldIdCol"
                        width="100px"
                    >
                        <header>
                            <Text
                                id="PenalityOperFieldIdText"
                                text="Field ID"
                               
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOperRepFeildCol"
                        width="150px"
                    >
                        <header>
                            <Text
                                id="PenalityOperRepFeildText"
                                text="Repeat Field"
                               
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOperFilterCol"
                    >
                        <header>
                            <Text
                                id="PenalityOperFilterText"
                                text="Filter"
                            />
                        </header>
                    </Column>
 
                     <Column
                        id="PenalityIOperDisCol"
                    >
                        <header>
                            <Text
                                id="PenalityIOperDisText"
                                text="Display"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOperMandCol"
                    >
                        <header>
                            <Text
                                id="PenalityOperMandText"
                                text="Mandatory"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOpeOperationCol"
                       width="180px"
                    >
                        <header>
                            <Text
                                id="PenalityOpeOperationText"
                                text="Operation"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOperTableNCol"
                        width="180px"
                    >
                        <header>
                            <Text
                                id="PenalityOperTableNText"
                                text="Table"
                            />
                        </header>
                    </Column>
 
                   
                    <Column
                        id="PenalityOpeTabFieldCol"
                        width="180px"
                    >
                        <header>
                            <Text
                                id="PenalityOpeTabFieldText"
                                text="Table Field"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOpeAddFunCol"
                        width="180px"
                    >
                        <header>
                            <Text
                                id="PenalityOpeAddFunText"
                                text="Additional Functions"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOpeFormulaCol"
                        width="180px"
                    >
                        <header>
                            <Text
                                id="PenalityOpeFormulaText"
                                text="Formula/Add Function"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOpeDefaultCol"
                        width="180px"
                    >
                        <header>
                            <Text
                                id="PenalityOpeDefaultText"
                                text="Default Value"
                            />
                        </header>
                    </Column>
 
                    <Column
                        id="PenalityOpeClrBuildCol"
                       
                    >
                        <header>
                            <Text
                                id="PenalityOpeClrBuildText"
                                text="Colour Builder"
                            />
                        </header>
                    </Column>
 
                </columns>
                <ColumnListItem id="PenalityOperColumnListItem" vAlign="Middle">
                    <Text id="PenalityOperSno" text="{selectedFModel>Snum}"/>
                    <Text id="PenalityOperEZId" text="{selectedFModel>EzID}"/>
                    <Text id="PenalityOperTable" text="{selectedFModel>Table}"/>
                    <Text id="PenalityOperSubprocessId" text="{selectedFModel>SubProcessId}"/>
                    <Text id="PenalityOperFields" text="{selectedFModel>Field}"/>
                    <Input id="PenalityOperFieldId" value="{path: 'selectedFModel>FieldID', type : 'sap.ui.model.type.String'}" change="onPenalityOperFieldIDChange" liveChange = "onPenalityOperFieldIdLiveChange" />
                    <Input id="PenalityOperRepeatField" showValueHelp="true" valueHelpRequest="onRepeatField"/>
                    <CheckBox id="PenalityOperFilterCheckBox" selected="{path:'selectedFModel>filterfield'}" select="OnPenalityOperChangeCheckFilter" />
                    <CheckBox id="PenalityOperDisplayCheckBox" selected="{path:'selectedFModel>display'}" select="OnPenalityOperChangeCheckDisplay" />
                    <CheckBox id="PenalityOperMandatoryCheckBox" selected="{path:'selectedFModel>mandatory'}" select="OnPenalityOperChangeCheckMandatory"  />
                    <ComboBox  id="PenalityOperComboBox2" value="{selectedFModel>Operation}"  change = "onPenalityOperChangeOperation" showSecondaryValues= "true" >
                        <core:ListItem id="PenalityOperColiGE"
                            key="GE"
                            text="GE"
                            additionalText ="Greater than equal to"
                        />
                        <core:ListItem id="PenalityOperColiLE"
                            key="LE"
                            text="LE"
                            additionalText ="Less than equal to"
                        />
                        <core:ListItem id="PenalityOperColiEQ"
                            key="EQ"
                            text="EQ"
                            additionalText ="Equal to"
                        />
                        <core:ListItem id="PenalityOperColiNE"
                            key="NE"
                            text="NE"
                            additionalText ="Not equal to"
                        />
                        <core:ListItem id="PenalityOperColiCO"
                            key="CO"
                            text="CO"
                             additionalText ="Contains only"
                        />
                        <core:ListItem id="PenalityOperColiCN"
                            key="CN"
                            text="CN"
                             additionalText ="Contains not only"
                        />
                        <core:ListItem id="PenalityOperColiBT"
                            key="BT"
                            text="BT"
                             additionalText ="Between"
                        />
                        <core:ListItem id="PenalityOperColiNB"
                            key="NB"
                            text="NB"
                             additionalText ="Not between"
                        />
                    </ComboBox>
                    <ComboBox id="PenalityOperComboBoxTable" items="{selectedTable>/}" value="{selectedFModel>MappedTable}" change="onPenalityOperMappedTableValChange">
                        <core:Item id="PenalityOperCoreItemTable" key="{selectedTable>Table}" text="{selectedTable>Table}"/>
                    </ComboBox>
                    <ComboBox id="PenalityOperComboBoxMappedField"  value="{selectedFModel>MappedField}" change="onPenalityOperMappedFieldValChange" ></ComboBox>
                    <Input id="PenalityOperAddFunction" value="{selectedFModel>AddiFunction}" showValueHelp="true" valueHelpRequest="onPenalityOperAdditionalFunct" valueHelpOnly="true"/>
                    <Input id="PenalityOperationFormula" value="{selectedFModel>Formula}" change="onPenalityOperFormulaValChange"></Input>
                    <Input id="PenalityOperDefaultVal" value="{selectedFModel>DefaultVal}" change="onPenalityOperDefaultValChange" />
                    <Button id="PenalityOperPaintBucketButton" type="Emphasized"  icon="sap-icon://paint-bucket"/>
                   
                </ColumnListItem>
                <noData>
                    <IllustratedMessage id="PenalityOperIllustratedMsg" enableVerticalResponsiveness="true" title="No Data Found" description="There are no items in this Table"/>
                </noData>
            </Table>
            </ScrollContainer>
        </content>
            <footer>
                <OverflowToolbar id="PenalityOperOverflowToolbar2">
                    <ToolbarSpacer id="PenalityOperToolbarSpacer2"/>
                        <Button id="PenalityOperSaveButton" text="Save" type="Emphasized" press="onPenalityOperSave"/>
                </OverflowToolbar>
            </footer>
    </Page>
</mvc:View>
 